###############################################
# BuzzBot / Web Server Environment (.env)     #
###############################################

# --- Core Flask / Server ---
SECRET_KEY=change-me
DEBUG=True
PUBLIC_BASE_URL=http://<your-server-ip>:8000

# Database (either set DATABASE_URL or use DATABASE_PATH)
DATABASE_PATH=instance/buzzbot.db
# DATABASE_URL=sqlite:///instance/buzzbot.db

# --- AI Provider Credentials (REQUIRED) ---
OPENAI_API_KEY=replace-with-real-key
GOOGLE_API_KEY=replace-with-real-key

# Optional override for OpenAI-compatible gateway
# OPENAI_BASE_URL=https://your-gateway.example/v1

# --- Model & Prompt Defaults ---
OPENAI_MODEL=gpt-4o-mini
# OPENAI_SYSTEM_PROMPT=You are BuzzBot, an assistant that helps create viral video ideas.

# Disable colored terminal output
# NO_COLOR=1

# Additional toggles
# BUZZBOT_DEBUG=1

# (Add any future feature flags here)
